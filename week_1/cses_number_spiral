#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);

    int t;
    cin >> t;
    while (t--) {
        long long y, x;
        cin >> y >> x;
        long long z = max(x, y);
        long long z2 = (z - 1) * (z - 1);

        if (z % 2 == 0) {
            if (y == z)
                cout << z2 + x << '\n';
            else
                cout << z*z - y + 1 << '\n';
        } else {
            if (x == z)
                cout << z2 + y << '\n';
            else
                cout << z*z - x + 1 << '\n';
        }
    }

    return 0;
}
